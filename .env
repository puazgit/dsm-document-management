# Copy this file to .env.local for development

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/dsm_db?schema=public"

# ================================
# AUTHENTICATION & SECURITY
# ================================
NEXTAUTH_SECRET="dev-secret-key-change-in-production"
NEXTAUTH_URL="http://10.99.99.132:3000"
JWT_SECRET="dev-jwt-secret-change-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="dev-refresh-secret-change-in-production"
REFRESH_TOKEN_EXPIRES_IN="30d"

# ================================
# FILE STORAGE & UPLOAD
# ================================
UPLOAD_PATH="./public/uploads"
MAX_FILE_SIZE="52428800"  # 50MB
ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png"

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV="development"
APP_NAME="Dokumen Sistem Manajemen Terpadu"
APP_URL="http://localhost:3000"

# ================================
# EMAIL CONFIGURATION (Development)
# ================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="DSM System <noreply@localhost>"
MOCK_EMAIL="true"

# ================================
# DEVELOPMENT SETTINGS
# ================================
DEBUG_MODE="true"
LOG_LEVEL="debug"
ENABLE_PRISMA_LOGGING="true"