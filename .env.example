# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/dsm_db?schema=public"
DIRECT_URL="postgresql://postgres:password@localhost:5432/dsm_db?schema=public"

# ================================
# AUTHENTICATION & SECURITY
# ================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-nextauth-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-this"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Encryption for sensitive data
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# ================================
# FILE STORAGE & UPLOAD
# ================================
UPLOAD_PATH="./public/uploads"
MAX_FILE_SIZE="52428800"  # 50MB in bytes
ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif"
THUMBNAIL_SIZE="300"

# Cloud Storage (Optional - uncomment if using cloud storage)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_S3_BUCKET="your-s3-bucket-name"

# ================================
# EMAIL CONFIGURATION
# ================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="DSM System <noreply@yourdomain.com>"

# Email Templates
EMAIL_TEMPLATE_PATH="./src/templates/emails"

# ================================
# FEATURE FLAGS
# ================================
# A/B Testing: Enhanced PDF Viewer (EmbedPDF)
NEXT_PUBLIC_USE_ENHANCED_PDF_VIEWER="false"
# Options: "true" = EmbedPDF, "false" = Legacy iframe viewer

# ================================
# REDIS & CACHING
# ================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
CACHE_TTL="3600"  # 1 hour in seconds

# ================================
# WEBSOCKET & REAL-TIME
# ================================
WEBSOCKET_PORT="3001"
WEBSOCKET_PATH="/socket.io"
ENABLE_WEBSOCKET="true"

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV="development"
APP_NAME="Document Management System"
APP_URL="http://localhost:3000"
APP_VERSION="1.0.0"

# Pagination
DEFAULT_PAGE_SIZE="20"
MAX_PAGE_SIZE="100"

# Session Configuration
SESSION_TIMEOUT="86400"  # 24 hours in seconds
MAX_SESSIONS_PER_USER="5"

# ================================
# LOGGING & MONITORING
# ================================
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"
ENABLE_REQUEST_LOGGING="true"

# Error Tracking (Optional)
# SENTRY_DSN="your-sentry-dsn"
# SENTRY_ENVIRONMENT="development"

# ================================
# API & RATE LIMITING
# ================================
API_RATE_LIMIT="100"  # requests per minute
API_RATE_WINDOW="60"  # window in seconds

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS="true"

# ================================
# SECURITY HEADERS
# ================================
CONTENT_SECURITY_POLICY="default-src 'self'"
X_FRAME_OPTIONS="DENY"
X_CONTENT_TYPE_OPTIONS="nosniff"

# ================================
# BACKUP & MAINTENANCE
# ================================
BACKUP_PATH="./backups"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM (cron format)
MAINTENANCE_MODE="false"

# ================================
# DOCUMENT SETTINGS
# ================================
DOCUMENT_RETENTION_DAYS="365"  # Default retention period
AUTO_ARCHIVE_ENABLED="true"
WATERMARK_TEXT="CONFIDENTIAL"
ENABLE_DOCUMENT_VERSIONING="true"

# ================================
# NOTIFICATION SETTINGS
# ================================
NOTIFICATION_BATCH_SIZE="50"
NOTIFICATION_CLEANUP_DAYS="30"
EMAIL_NOTIFICATION_ENABLED="true"
IN_APP_NOTIFICATION_ENABLED="true"

# ================================
# ADMIN SETTINGS
# ================================
ADMIN_EMAIL="admin@yourdomain.com"
SYSTEM_MAINTENANCE_EMAIL="maintenance@yourdomain.com"
ENABLE_REGISTRATION="false"  # Set to true to allow user registration
DEFAULT_USER_GROUP="members"

# ================================
# DEVELOPMENT ONLY
# ================================
# Set to true to enable debugging features
DEBUG_MODE="true"
ENABLE_PRISMA_LOGGING="true"
SHOW_QUERY_LOGS="false"

# Mock email in development (emails will be logged instead of sent)
MOCK_EMAIL="true"